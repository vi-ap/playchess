extends layout

block content
  h1 #{title}
  .board(ondrop="drop(event)" ondragover="allowDrop(event)")
    each rowNum in [1, 3, 5, 7]
      .square.white
      .square.black
      .square.white
      .square.black
      .square.white
      .square.black
      .square.white
      .square.black
      .line-break
      .square.black
      .square.white
      .square.black
      .square.white
      .square.black
      .square.white
      .square.black
      .square.white
      .line-break
    
  // label(for="SoundOption") Enable Sound
  // input(id="SoundOption", type="checkbox", name="Sound")
