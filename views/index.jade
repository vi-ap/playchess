    .chess-piece.ui-widget-content
      != whitePiece
  .line-break
  each blackPiece in ['&#9818;', '&#9819;', '&#9820;', '&#9820;', '&#9821;', '&#9821;', '&#9822;', '&#9822;', '&#9823;', '&#9823;', '&#9823;', '&#9823;', '&#9823;', '&#9823;', '&#9823;', '&#9823;']
    .chess-piece.ui-widget-content
      != blackPiece
